@model DiaryEntry

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2>Delete Diary Entry</h2>
                </div>
                <div class="card-body">
                    <h3 class="mb-4">Are you sure you want to delete this diary entry?</h3>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label fw-bold"></label>
                        <div class="form-control-plaintext">@Model.Title</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Content" class="form-label fw-bold"></label>
                        <div class="form-control-plaintext">@Model.Content</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Created" class="form-label fw-bold"></label>
                        <div class="form-control-plaintext">@Model.Created.ToShortDateString()</div>
                    </div>

                    <form method="post" asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-danger">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                </svg>
                                Delete
                            </button>
                            <a asp-controller="DiaryEntries" asp-action="Index" class="btn btn-secondary">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>